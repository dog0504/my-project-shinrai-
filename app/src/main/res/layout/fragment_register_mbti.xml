<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterNameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lover_id"
            style="@style/h1TextStyle_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lover_mbti"
            />

        <TextView
            android:id="@+id/description"
            style="@style/h3TextStyle_thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:fontFamily="sans-serif"
            android:text="@string/lover_mbti_description" />

        <EditText
            android:id="@+id/edit_lover_id"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"

            android:background="@drawable/edit_background"
            android:hint="@string/hint_mbti"
            android:paddingStart="15dp"

            tools:ignore="RtlSymmetry"
            />

        <FrameLayout
            android:id="@+id/frame_lover_mbti_color"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="27dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/text_lover_mbti_type"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/mbti_title_layout"
                />
            <ImageView
                android:id="@+id/image_lover_mbti_type"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/mbti_image_background"
                app:backgroundTint="@null" />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>